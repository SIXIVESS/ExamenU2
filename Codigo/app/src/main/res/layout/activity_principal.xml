<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Principal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="174dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/grupo1"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_detalles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_button"
            android:text="@string/detalles"
            tools:layout_editor_absoluteX="157dp"
            tools:layout_editor_absoluteY="110dp" />

        <Button
            android:id="@+id/btn_globos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_button"
            android:text="@string/globos"
            tools:layout_editor_absoluteX="157dp"
            tools:layout_editor_absoluteY="110dp" />

        <Button
            android:id="@+id/btn_peluches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_button"
            android:text="@string/peluches"
            tools:layout_editor_absoluteX="157dp"
            tools:layout_editor_absoluteY="110dp" />

        <Button
            android:id="@+id/btn_regalos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_button"
            android:text="@string/regalos"
            tools:layout_editor_absoluteX="157dp"
            tools:layout_editor_absoluteY="110dp" />

        <Button
            android:id="@+id/btn_tazas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_button"
            android:text="@string/tazas"
            tools:layout_editor_absoluteX="157dp"
            tools:layout_editor_absoluteY="110dp" />

    </LinearLayout>
</LinearLayout>